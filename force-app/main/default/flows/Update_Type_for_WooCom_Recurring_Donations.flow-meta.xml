<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <environments>Default</environments>
    <interviewLabel>Update Type for WooCom Recurring Donations {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Update Type for WooCom Recurring Donations</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Updates de opportunity type from Donation to Recurring Donation</description>
        <name>update_to_recurring_donation</name>
        <label>update to recurring donation</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <inputAssignments>
            <field>Type</field>
            <value>
                <stringValue>Recurring Donation</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>update_to_recurring_donation</targetReference>
        </connector>
        <filterLogic>1 AND 2 AND (3 OR 4 OR 5)</filterLogic>
        <filters>
            <field>LeadSource</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>WooCommerce</stringValue>
            </value>
        </filters>
        <filters>
            <field>Type</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Donation</stringValue>
            </value>
        </filters>
        <filters>
            <field>WooCommerce_Subscription__c</field>
            <operator>Contains</operator>
            <value>
                <stringValue>yearly</stringValue>
            </value>
        </filters>
        <filters>
            <field>WooCommerce_Subscription__c</field>
            <operator>Contains</operator>
            <value>
                <stringValue>quarterly</stringValue>
            </value>
        </filters>
        <filters>
            <field>WooCommerce_Subscription__c</field>
            <operator>Contains</operator>
            <value>
                <stringValue>monthly</stringValue>
            </value>
        </filters>
        <object>Opportunity</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
